{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "types": ["node"],

    "resolveJsonModule": true,

    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
